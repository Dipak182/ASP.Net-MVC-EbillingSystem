@model CodeFirst.Models.Admin.UserLogin

@{
    ViewBag.Title = "UserLogin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>User Authentication</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.UserNmame)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.UserNmame)
            @Html.ValidationMessageFor(model => model.UserNmame)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Password)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Password)
            @Html.ValidationMessageFor(model => model.Password)
        </div>

        <p>
            <input type="submit" value="Login" />
        </p>
        @Html.ActionLink("Sign up for new account", "Index")
    </fieldset>
}

<div>
